#include <iostream>

using namespace std;
//prototip ve :: skop i√æareti


class Kisi{


 public:
     int yas;
     string ad;
Kisi();
void yazdir();

int hesap(int , int);

};

Kisi ::Kisi(){
cout<<"yapici metot calissti"<<endl;};

void Kisi::yazdir(){
cout<<"ad: "<<ad<<endl;

cout<<"yas: "<<yas<<endl;
}

int Kisi::hesap(int a, int b){
    return a+b;
};






int main()
{
    cout << "Hello world!" << endl;

    Kisi k1;
    k1.ad="oguz";
    k1.yas=20;

    k1.yazdir();
    int sonuc=k1.hesap(10,20);
    cout<<"toplam sonucu: "<<sonuc;








    return 0;
}
